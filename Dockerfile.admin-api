# Dockerfile.admin-api - FastAPI Backend for Admin Panel
FROM python:3.14-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY admin-api/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY admin-api/app ./app

# Create non-root user with same UID as host user (for reading mounted logs)
# Use build arg to allow customization, default to 1000 (typical Linux user)
ARG HOST_UID=1000
RUN useradd -m -u ${HOST_UID} appuser && chown -R appuser:appuser /app
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose port
EXPOSE 8000

# Run with uvicorn
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
