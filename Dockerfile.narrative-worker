# Dockerfile.narrative-worker - Automatic narrative generation worker
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY admin-api/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY admin-api/app ./app

# Create non-root user with same UID as host user (for reading mounted logs)
ARG HOST_UID=1000
RUN useradd -m -u ${HOST_UID} appuser && chown -R appuser:appuser /app
USER appuser

# Health check - simple process check
HEALTHCHECK --interval=60s --timeout=10s --start-period=30s --retries=3 \
    CMD pgrep -f "narrative_worker" || exit 1

# Run the worker
CMD ["python", "-m", "app.workers.narrative_worker"]
